---
import { Image } from 'astro:assets';

const { link, icon, text, background, altText } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="cta">
    <Image src={icon} class="icon" alt={altText} />
    <span>{text}</span>
</a>

<style define:vars={{ background }}>
    .cta {
        display: inline-flex;
        align-items: center;
        background: var(--background);
        color: white;
        padding: 0.6em 1.2em;
        border-radius: 0.5em;
        text-decoration: none;
        font-weight: 600;
        font-size: 1em;
        transition: 0.2s;
    }

    .cta:hover {
        outline: 4px solid white;
    }

    .icon {
        width: 1.5em;
        height: 1.5em;
        vertical-align: middle;
        margin-right: 0.5em;
    }
</style>