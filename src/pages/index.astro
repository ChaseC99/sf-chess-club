---
let title = "SF Chess Club";
let pageDescription = "The San Francisco Chess Club";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Meta Tags -->
        <meta name="description" content={pageDescription}>
        <meta name="keywords" content="SF Chess Club, San Francisco, Chess">
        <meta property="og:url" content="https://sfchess.club">
        <meta property="og:type" content="website">
        <meta property="og:title" content={title}>
        <meta property="og:description" content={pageDescription}>
        <meta name="twitter:card" content="summary">
        <meta name="twitter:title" content={title}>
        <meta name="twitter:description" content={pageDescription}>
        <!-- <meta name="twitter:image" content="https://sfchess.club/logo.png"> -->

		<title>SF Chess Club</title>
	</head>
	<body>
		<!-- Floating chess pieces background -->
		<div class="chess-pieces-bg">
			<div class="chess-piece" style="--delay: 0s; --start-x: -10%; --end-x: 30%; --peak-y: 10%;"></div>
			<div class="chess-piece" style="--delay: 1.5s; --start-x: 110%; --end-x: 70%; --peak-y: 15%;"></div>
			<div class="chess-piece" style="--delay: 3s; --start-x: -5%; --end-x: 40%; --peak-y: 25%;"></div>
			<div class="chess-piece" style="--delay: 4.5s; --start-x: 105%; --end-x: 60%; --peak-y: 30%;"></div>
			<div class="chess-piece" style="--delay: 6s; --start-x: -15%; --end-x: 25%; --peak-y: 20%;"></div>
			<div class="chess-piece" style="--delay: 7.5s; --start-x: 115%; --end-x: 80%; --peak-y: 35%;"></div>
			<div class="chess-piece" style="--delay: 9s; --start-x: -8%; --end-x: 35%; --peak-y: 40%;"></div>
			<div class="chess-piece" style="--delay: 10.5s; --start-x: 108%; --end-x: 65%; --peak-y: 45%;"></div>
			<div class="chess-piece" style="--delay: 12s; --start-x: -12%; --end-x: 50%; --peak-y: 50%;"></div>
			<div class="chess-piece" style="--delay: 13.5s; --start-x: 112%; --end-x: 75%; --peak-y: 55%;"></div>
		</div>

		<h1>San Francisco Chess Club</h1>

		<div class="content-container">
			<p>
				currently developing our pieces... 
				(and the <a href="https://github.com/ChaseC99/sf-chess-club" target="_blank" rel="noopener">website</a>)
			</p>
		</div>
	</body>
</html>

<style>
	html {
		/* 
		CHECKERBOARD BACKGROUND
		To change the colors of the board, update the hex codes.
		To change the size of the squares, update the values after the slash.
		*/
		background: repeating-conic-gradient(#875337 0 25%, #f4deba 0 50%) 50% / 20vh 20vh;
		
		/* Make the cursor a pawn */
		cursor: url('/icons/chess-pawn-icon.svg'), auto;
	}

	body {
		margin: 0;
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		position: relative;
		overflow: hidden;
		min-height: 100vh;
	}

	.chess-pieces-bg {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: -1;
	}

	.chess-piece {
		position: absolute;
		width: 40px;
		height: 40px;
		background-image: url('/icons/chess-pawn-icon.svg');
		background-size: contain;
		background-repeat: no-repeat;
		opacity: 0;
		left: var(--start-x);
		top: 100%;
		animation: arc-flight 4s infinite ease-out;
		animation-delay: var(--delay);
		transform-origin: center;
	}

	@keyframes arc-flight {
		0% {
			left: var(--start-x);
			top: 100%;
			opacity: 0;
			transform: rotate(0deg) scale(0.8);
		}
		10% {
			opacity: 0.7;
		}
		25% {
			left: calc((var(--start-x) + var(--end-x)) / 2);
			top: var(--peak-y);
			opacity: 0.9;
			transform: rotate(180deg) scale(1.1);
		}
		50% {
			left: calc((var(--start-x) + var(--end-x)) / 2 + 5%);
			top: calc(var(--peak-y) + 10%);
			opacity: 0.8;
			transform: rotate(270deg) scale(1);
		}
		75% {
			left: var(--end-x);
			top: 80%;
			opacity: 0.6;
			transform: rotate(360deg) scale(0.9);
		}
		90% {
			opacity: 0.3;
		}
		100% {
			left: var(--end-x);
			top: 110%;
			opacity: 0;
			transform: rotate(450deg) scale(0.7);
		}
	}

	h1 {
		text-align: center;
		margin: 10vh 0 2.5rem 0;
		width: fit-content;
		background: #e0c08d;
		padding: 1rem 2.5rem;
		border-radius: 1.5rem;
		box-shadow: 0 4px 24px 0 rgba(0,0,0,0.08);
		font-style: italic;
		border: 2px solid #fffbe9;
	}

	.content-container {
		display: flex;
		justify-content: center;
		align-items: center;
		background: #fffbe9;
		padding: 1rem 2.5rem;
		border-radius: 1.5rem;
		box-shadow: 0 4px 24px 0 rgba(0,0,0,0.08);
		border: 2px solid #e0c08d;
	}
</style>